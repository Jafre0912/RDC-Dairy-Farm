# Database Configuration
MONGO_URI=mongodb://127.0.0.1:27017/dairyManagement
DB_NAME=dairyManagement

# Authentication and Security
JWT_SECRET=changeThisToASecureRandomString
JWT_EXPIRES_IN=30d
SESSION_SECRET=anotherSecureRandomString

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Server Configuration
PORT=5000
NODE_ENV=development

# Password Reset
PASSWORD_RESET_EXPIRES_IN=600000

# Gemini AI Configuration
# Get your API key from https://makersuite.google.com/app/apikey
# If left empty, the system will use mock data for disease predictions
GEMINI_API_KEY= 